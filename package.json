{
  "name": "printer-cash-drawer-service",
  "version": "1.0.0",
  "description": "Local service adapter for POS web app to print receipts and open cash drawer",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "pkg . --targets node18-win-x64 --output dist/printer-service.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output dist/printer-service",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop printer-service",
    "pm2:restart": "pm2 restart printer-service",
    "pm2:logs": "pm2 logs printer-service",
    "pm2:status": "pm2 status"
  },
  "pkg": {
    "assets": [
      "config.example.js",
      "README.md",
      "README_WINDOWS.md"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "printer",
    "cash-drawer",
    "pos",
    "thermal-printer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.18.2",
    "node-thermal-printer": "^4.4.0",
    "usb": "^2.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
